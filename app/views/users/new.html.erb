			
					

<div class= 'row'>
	<div class= 'col-xs-12'>
            
        
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>  
		
		 <div class="form-group">
             <div class="control-lable col-sm-2">
				 <%= f.label :username %>
			 </div>
			 <div class="col-sm-8">
				 <%= f.text_field :username, class: "form-control", placeholder: "UserName", autofocus: true %>
			 </div>
		</div>
      

       <div class="form-group">
		<div class="control-lable col-sm-2">
			<%= f.label :email %>
		   </div>
		   <div class="col-sm-8">
			   <%= f.email_field :emails, rows: 10, class: "form-control", placeholder: "enter email" %>
		   </div>
		</div>
		<div class="form-group">
		<div class="control-lable col-sm-2">
			<%= f.label :password %>
		   </div>
		   <div class="col-sm-8">
			   <%= f.password_field :password, rows: 10, class: "form-control", placeholder: "enter the password" %>
		   </div>
		</div>
       <div class="form-group">
		   <div class="col-sm-offset-2 col-sm-2">
         <%= f.submit "SignUp", class: 'btn btn-primary btn-lg'%>
		   </div>
		</div>
      <% end %>

        <div class="col-xs-4 col-xs-offset-4">
		    [ <%= link_to "Cancel request back to articles", articles_path %> ]
		</div>
 </div>
</div>